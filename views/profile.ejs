<!DOCTYPE html>
<html>
  <head>
    <style>
    body {width: 80%; margin: auto; background-color: green;}
    h1 {text-align: center; color: white; font-size: 48px; text-transform: uppercase;}
    p {text-align: center; color: white; font-size: 28px;}
    li{text-align: center; color: white; font-size: 24px; list-style: none;}
    </style>
    <title><%=name%></title>
  </head>
  <body>
    <% include partials/nav.ejs %>
    <h1>Profile of <%=name%></h1>
    <p><strong>Age : </strong><%=data.age%></p>
    <p><strong>Job : </strong><%=data.job%></p>
    <p>Hobbies</p>
    <ul>
      <% data.hobbies.forEach(function(item){ %>
        <li><%= item %></li>
      <% }) %>
    </ul>
  </body>
</html>
